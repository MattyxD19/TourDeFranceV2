<Window x:Class="TourDeFranceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourDeFranceApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="50">
            <ListView x:Name="listViewName" Margin="1" Width="600" HorizontalAlignment="Left">
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}"></TextBlock>
                </DataTemplate>
            </ListView>
            <TextBox x:Name="SearchBar" Width="75" Height="25" />
            <ComboBox Name="OrderSelection" Width="75" Height="25" VerticalAlignment="Center">
                <ComboBoxItem Name="OrderRank" Content="Rank" Selected="OrderRank_Selected"></ComboBoxItem>
                <ComboBoxItem Name="OrderName" Content="Name" Selected="OrderName_Selected"></ComboBoxItem>
                <ComboBoxItem Name="OrderCountry" Content="Country" Selected="OrderCountry_Selected"></ComboBoxItem>
                <ComboBoxItem Name="OrderResultTime" Content="Result" Selected="OrderResultTime_Selected"></ComboBoxItem>
            </ComboBox>

           
        </StackPanel>
    </Grid>
</Window>
